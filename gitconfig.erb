[user]
        name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
        email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[core]
        pager = less -FRSX
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
        excludesfile = <%= ENV['HOME'] %>/.gitignore
        quotepath = false
        editor = /usr/bin/vim
[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto
        ui = true
        pager = true
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[merge]
        tool = opendiff
[difftool "Kaleidoscope"]
        cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
        prompt = false
[diff]
        tool = Kaleidoscope
[alias]
        st = status -sb
        ci = commit
        co = checkout
        ff = merge --ff-only
        dc = diff --cached
        dh = diff HEAD
        unstage = reset HEAD
        ll = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

        # remove deleted files from git
        # git status | grep deleted | awk '{print \$3}' | xargs git rm

        # revert back to last local commit
        # git reset --hard

        # unstage file
        # git reset HEAD -- <file>

        # stage all modified files being tracked
        # git add -u

        # revert changes of a merge
        # git reset --hard ORIG_HEAD

        # show log entries
        # git log origin..HEAD

